<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd" version="2.0">
  
    <persistence-unit name="planactionPersistenceUnit" transaction-type="JTA">
    	<jta-data-source>${data.source.jndi.name}</jta-data-source>
    	<exclude-unlisted-classes>true</exclude-unlisted-classes>
    	<!-- Not responsible of -->
    	
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.Producer</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.AdministrativeUnit</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.Activity</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.CostUnit</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.Lessor</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.FundingSource</class>
    	
    	<!-- Responsible of -->
    	<!-- Action Plan  -->
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.ActionPlan</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.ActionPlanActivity</class>
		<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.Imputation</class>
		<!-- Entry Authorization Plan -->
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.EntryAuthorization</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.PaymentCredit</class>
    	<!-- Funding -->
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.Funding</class>
    	<class>ci.gouv.dgbf.system.planaction.server.persistence.entities.FundingAllocation</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="${hibernate.hbm2ddl.auto}"/>
			<property name="hibernate.show_sql" value="false"/>
			<property name="hibernate.format_sql" value="false"/>
			<property name="hibernate.physical_naming_strategy" value="org.cyk.utility.server.persistence.impl.hibernate.PhysicalNamingStrategyStandardImpl"/>
			
			<!-- Caching -->
			<property name="javax.persistence.sharedCache.mode" value="DISABLE_SELECTIVE"/>
		</properties>

    </persistence-unit>  
</persistence>